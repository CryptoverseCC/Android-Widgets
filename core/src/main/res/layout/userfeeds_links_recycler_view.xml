<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/userfeeds_links_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <ProgressBar
        android:id="@+id/userfeeds_links_loader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/userfeeds_links_empty_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/userfeeds_link_background"
        android:gravity="center"
        android:textColor="@color/userfeeds_link_text_color"
        android:visibility="gone"/>

</FrameLayout>
