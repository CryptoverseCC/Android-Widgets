<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/userfeeds_ad_background"
    android:orientation="vertical"
    android:paddingRight="50dp">

    <TextView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/userfeeds_ad_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:lines="1"
        android:textColor="@color/userfeeds_ad_text_color"
        android:textStyle="bold"
        tools:text="Some very long title that does not fit screen width, so it must be longer and longer"/>

    <TextView
        android:id="@+id/userfeeds_ad_url"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/userfeeds_ad_text_color"
        tools:text="https://userfeeds.io"/>

</LinearLayout>
